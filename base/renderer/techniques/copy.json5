{
  name: "copy",
  configurations: [
    {
      name: "DEFAULT"
    }
  ],
  uniforms: [
    { name: "u_color", type: "sampler2D", value: 0 }
  ],
  shaders: [
    {
      type: "vertex",
      outputs: [
        { name: "vs_coordinate", type: "f32x2" }
      ],
      imports: [
        "fullscreen_triangle"
      ],
      source: "
        void main() {
          f32x4 triangle = fullscreen_triangle();
          rx_position = f32x4(triangle.xy, 0.0, 1.0);
          vs_coordinate = triangle.zw;
        }
      "
    },
    {
      type: "fragment",
      inputs: [
        { name: "vs_coordinate", type: "f32x2" }
      ],
      outputs: [
        { name: "fs_color",      type: "f32x4" }
      ],
      source: "
        void main() {
          fs_color = f32x4(rx_texture2D(u_color, vs_coordinate).rgb, 1.0);
        }
      "
    }
  ]
}
