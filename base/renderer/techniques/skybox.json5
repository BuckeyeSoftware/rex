{
  name: "skybox",
  uniforms: [
    { name: "u_inverse_projection", type: "mat4x4f" },
    { name: "u_inverse_view",       type: "mat4x4f" },
    { name: "u_sampler",            type: "samplerCM", value: 0 },
    { name: "u_grading_lut",        type: "sampler3D", when: "HAS_GRADING_LUT" },
    { name: "u_grading_properties", type: "vec2f",     when: "HAS_GRADING_LUT" }
  ],
  permutes: [
    "HAS_GRADING_LUT"
  ],
  shaders: [
    {
      type: "vertex",
      imports: [
        "fullscreen_triangle"
      ],
      outputs: [
        { name: "vs_coordinate", type: "vec3f" }
      ],
      source: "
        void main() {
          vec4f triangle = fullscreen_triangle();
          vec4f position = vec4f(triangle.xy, 0.0, 1.0);
          vec4f unprojected = u_inverse_projection * position;
          vs_coordinate = (u_inverse_view * unprojected).xyz;
          rx_position = position.xyww;
        }
      "
    },{
      type: "fragment",
      inputs: [
        { name: "vs_coordinate", type: "vec3f" }
      ],
      outputs: [
        { name: "fs_color",      type: "vec4f" }
      ],
      source: "
        void main() {
          vec4f color = rx_textureCM(u_sampler, vs_coordinate);
        #if defined(HAS_GRADING_LUT)
          float z = color.z * u_grading_properties.x + u_grading_properties.y;
          fs_color = rx_texture3D(u_grading_lut, vec3f(color.xy, z));
        #else
          fs_color = color;
        #endif
        }
      "
    }
  ]
}
