{
  name: "normal_decode",
  imports: [
    "sign_not_zero"
  ],
  source: "
    f32x3 normal_decode(f32x2 normal) {
      // Remap [0, 1] to [-1, 1]
      normal = normal * 2.0 - 1.0;

      f32x3 v = f32x3(normal.xy, 1.0 - abs(normal.x) - abs(normal.y));
      if (v.z < 0.0) {
        v.xy = (1.0 - abs(v.yx)) * sign_not_zero(v.xy);
      }

      return normalize(v);
    }
  "
}
