{
  name: "sample_hdri",
  source: "
    f32x4 sample_hdri(rx_sampler2D hdri, f32x3 uvw) {
      f32x3 n = normalize(uvw);
      f32x2 uv = f32x2(atan(n.z, n.x), -asin(n.y));
      f32x4 load = rx_texture2D(hdri, uv * f32x2(0.1591, 0.3183) + 0.5);
      return f32x4(pow(load.xyz, f32x3(1.0 / 2.2)), 1.0);
    }
  "
}
